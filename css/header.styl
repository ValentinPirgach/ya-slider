@import "lib/nib"
@import "fonts"

*
  margin 0
  padding 0
  outline none

header
  width 100%
  height 100vh
  //padding-bottom 50px

.slider-wrapper
  position absolute
  left 0
  width 100%
  height 100vh
  overflow hidden
  &::after
    position absolute
    content ''
    bottom: 0;
    border-bottom 13.16vw solid #fff;
    border-left 100vw solid transparent;
    z-index 10

.slide
  position absolute
  left 0
  width 100%
  height 100%
  transition all 0.3s linear
  z-index 5

.images-wrapper
  position relative
  height 100%

.slide-image
  position relative
  top 0
  left 0
  float left
  width 100%
  height 100%
  background-repeat no-repeat
  background-size cover
  background-position 50%
  //transition all 0.1s linear
  z-index 5
  &.slide-1
    background-image url("../images/presentation/1.jpg")
  &.slide-2
    background-image url("../images/presentation/2.jpg")
  &.slide-3
    background-image url("../images/presentation/3.jpg")
  &.slide-4
    background-image url("../images/presentation/4.jpg")
.slide-name
  position absolute
  font-family "PT Sans Bold"
  font-size 17.875em
  width 100%
  line-height 0.7
  color #fff
  bottom 5.5vw
  text-align center
  transform rotate(-7.3deg)
  cursor default
  transition all 0.7s ease-in-out 0.2s
  user-select none
  animation-name: downhill;
  animation-duration: 1s;
  animation-timing-function:ease-in-out;
  animation-delay: 0;
  animation-iteration-count: 1;
  animation-direction: alternate;
.slide-description
  position absolute
  font-family "PT Serif Italic"
  font-size 1.25em
  color rgba(255,255,255, 0.8)
  width content_width
  left 50%
  margin-left -(content_width / 2)
  text-align right
  top 30%
/*  &.active
  opacity 1*/
&.active-remove
  .slide-name
    transform translate(0, 0) rotate(-7.3deg)
  &.active-remove-process
    .slide-name
      transform translate(-100%, 100%) rotate(-7.3deg)
&.active-add
  .slide-name
    transition none
    transform translate(100%, -90%) rotate(-7.3deg)
  &.active-add-process
    .slide-name
      transition all 0.7s ease-in-out
      transform translate(0, 0) rotate(-7.3deg)



@keyframes downhill
  from
    transform translate(100%, -90%) rotate(-7.3deg)
  to
    transform translate(0, 0) rotate(-7.3deg)

@keyframes downhill-leave
  from
    transform translate(0, 0) rotate(-7.3deg)
    opacity 1
  to
    transform translate(-100%, 0) rotate(-7.3deg)
    opacity 0

.slider-navigation-wrapper
  position absolute
  bottom 0
  left 50%
  transform translate(-50%, -10px)
  z-index 11
  .slider-nav
    width 13px
    height 13px
    display inline-block
    margin 4px
    box-sizing border-box
    border 2px #3f6ab9 solid
    border-radius 100%
    cursor pointer
    &.active
      background #3f6ab9


